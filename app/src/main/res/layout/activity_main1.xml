<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity1">

    <EditText
        android:id="@+id/grad"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Введите градусы"
        android:inputType="numberSigned|numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.295" />

    <EditText
        android:id="@+id/min"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:hint="Введите минуты"
        android:inputType="numberSigned|numberDecimal"
        app:layout_constraintStart_toStartOf="@+id/grad"
        app:layout_constraintTop_toTopOf="@+id/grad" />

    <EditText
        android:id="@+id/sec"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:hint="Введите секунды"
        android:inputType="numberSigned|numberDecimal"
        app:layout_constraintStart_toStartOf="@+id/min"
        app:layout_constraintTop_toTopOf="@+id/min" />

    <Button
        android:id="@+id/button"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="120dp"
        android:text="Вычислить"
        app:layout_constraintStart_toStartOf="@+id/sec"
        app:layout_constraintTop_toTopOf="@+id/sec" />

    <TextView
        android:id="@+id/answer1"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginBottom="120dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/grad"
        app:layout_constraintStart_toStartOf="@+id/grad" />

    <ImageButton
        android:id="@+id/button2"
        android:layout_width="63dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/answer1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/kisspng_computer_icons" />

</androidx.constraintlayout.widget.ConstraintLayout>